<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_grey"
        android:padding="@dimen/padding_nano">

        <LinearLayout
            android:id="@+id/home_menu_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:padding="@dimen/padding_micro"
            android:background="@drawable/menu_wrapper_background">

            <Button
                android:id="@+id/menu_button_home_traffic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_menu_traffic"
                android:textColor="@color/material_blue_grey_800"
                android:layout_margin="@dimen/margin_micro"
                android:background="@drawable/menu_button_background"/>

            <Button
                android:id="@+id/menu_button_home_health"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/title_menu_health"
                android:textColor="@color/material_blue_grey_800"
                android:layout_margin="@dimen/margin_micro"
                android:background="@drawable/menu_button_background"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:background="@drawable/menu_wrapper_background"
                android:layout_margin="@dimen/margin_small">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                android:background="@drawable/menu_wrapper_background"
                android:layout_margin="@dimen/margin_small">

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
